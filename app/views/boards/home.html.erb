<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>10 Recent Boards</h1>

      <table class="table table-hover table-striped">
        <thead class="thead-dark">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th class="email-col">Email</th>
            <th class="date-col">Date of creating</th>
          </tr>
        </thead>
        <tbody>
          <% @boards.first(10).each_with_index do |board, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= link_to board.name, board, class: "text-primary" %></td>
              <td><%= board.owners_email %></td>
              <td><%= board.created_at.strftime("%d %b, %Y %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to "View all generated boards", boards_path, class: "btn btn-primary" %>
    </div>

    <div class="col-md-4">
        <div id="new-board" class="mt-3">
        <h2>Create a New Board</h2>
        <p class="mb-3">Fill out the form below to add a new board. Specify the board name, email, and other details as required.</p>
        <%= render "form", board: @board %>
        <p class="text-danger">All fields are necessary.</p> <!-- Add this line -->
        </div>
    </div>  
  </div>
</div>
